{
  "compilerOptions": {
    "module": "ES2022",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "skipDefaultLibCheck": true,
    "target": "ES2022",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "declarationMap": true,
    "declaration": true,
    "outDir": "dist",
    "lib": [
      "es2016",
      "dom",
      "es2018.promise"
    ],
    "allowJs": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}